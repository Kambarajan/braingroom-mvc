<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.braingroom.android.mvvmexample.view.LoginActivity">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundGray"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="50dp"
        tools:context="com.braingroom.user.view.activity.LoginActivity">


        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/braingroom_logo" />

        <LinearLayout
            android:id="@+id/login_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_icon"
            android:layout_marginTop="20dp"
            android:background="@drawable/solid_white_rounded_corner"
            android:orientation="vertical">


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:text="@={vm.email}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bt_blue" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:text="@={vm.password}" />

        </LinearLayout>

        <TextView
            android:id="@+id/email_signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/solid_bg_green_rounded_corner"
            android:gravity="center"
            android:onClick="@{vm.onLoginClicked}"
            android:text="SIGN IN"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/fb_sign_in_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_signin"
            android:layout_marginTop="@dimen/margin_med">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/fb_login_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/fb_login_fake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{vm.onFbLoginClicked}"
                android:src="@drawable/fb_login" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/google_sign_in_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_sign_in_container">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_login_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/google_login_fake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{vm.onGoogleLoginClicked}"
                android:src="@drawable/google_login" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:onClick="@{vm.onForgotPassClicked}"
                android:text="Forgot password?"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:onClick="@{vm.onSignupClicked}"
                android:text="@string/sign_up"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:visibility="@{vm.isOTP ? View.VISIBLE: View.GONE}" />-->


</android.support.constraint.ConstraintLayout>
